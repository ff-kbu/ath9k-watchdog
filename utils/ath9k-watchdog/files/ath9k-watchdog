#!/bin/sh
. /lib/freifunk/lib_node.sh
mkdir -p /usr/lib/ath9k-watchdog
node_id="$(get_node_id)"

logread -f | while read line
do
	case "$line" in
	*"Could not stop RX"*) 
			# Perform post-mortem dump
			tstmp=$(/bin/date +%s)
			echo -ne "nodeid=${node_id}&tstmp=${tstmp}\n" > /tmp/$tstmp
			echo -ne "reset-counters:\n" >> /tmp/$tstmp
			cat /sys/kernel/debug/ieee80211/phy*/ath9k/reset >> /tmp/$tstmp 
			echo -ne "dmesg:\n" >> /tmp/$tstmp
			/bin/dmesg >> /tmp/$tstmp
			# Compress to preserve space
			/bin/gzip /tmp/$tstmp
			
			# Move into upload directory
			mv  /tmp/$tstmp.gz /usr/lib/ath9k-watchdog

			#Bye 
			/sbin/reboot
		;;
	*)
		;;
	esac
done
